<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/loginpage1new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Loginactivity">
    <ImageView

        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/rect2" />

    <ImageView

        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/rectangles" />

    <Button
        android:id="@+id/loginpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Login"
        android:textColorHint="@color/white"
        android:textSize="45dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/creamcake400"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="200dp"
        />

    <Button
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="202dp"
        android:layout_toRightOf="@id/loginpage"
        android:fontFamily="@font/creamcake400"
        android:background="@android:color/transparent"
        android:hint="Sign Up"
        android:textColorHint="@color/white"
        android:textSize="45dp"
        />
    <EditText
        android:id="@+id/enterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Your Full Name"
        android:textColorHint="@color/customw"
        android:fontFamily="@font/imprisha"
        android:textColor="@color/customy"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="260dp"
        android:textSize="30dp"

        />
    <EditText
        android:id="@+id/enterEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Your Email"
        android:textColorHint="@color/customw"
        android:fontFamily="@font/imprisha"
        android:textColor="@color/customy"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/enterName"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        />
    <EditText
        android:id="@+id/enterpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Your Password"
        android:textColorHint="@color/customw"
        android:textColor="@color/customy"
        android:fontFamily="@font/imprisha"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/enterEmail"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/confirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:textColorHint="@color/customw"
        android:fontFamily="@font/imprisha"
        android:textColor="@color/customy"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/enterpassword"
        android:layout_marginTop="10dp"
        android:textSize="30dp"

        />
    <EditText
        android:id="@+id/phoneno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/customy"
        android:hint="Phone No."
        android:textColorHint="@color/customw"
        android:fontFamily="@font/imprisha"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/confirmpassword"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
    />

    <ImageView

        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/phoneno"
        android:src="@drawable/rect3" />

    <Button
        android:id="@+id/Sign_Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Sign Up"
        android:textColorHint="@color/customc"
        android:layout_below="@id/phoneno"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/transparent"
        android:layout_marginLeft="140dp"
        android:textSize="35dp"        />




</RelativeLayout>